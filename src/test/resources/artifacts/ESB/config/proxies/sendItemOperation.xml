<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="sendItem"
       transports="http https"
       startOnLoad="true">
   <description/>
   <target>
      <inSequence>
         <property name="uri.var.saveItemToFolder"
                   expression="//SaveItemToFolder/text()"
                   scope="default"
                   type="STRING"/>
         <property name="uri.var.itemId"
                   expression="//ItemId"
                   scope="default"
                   type="STRING"/>
         <ews.config>
            <endpointUrl>https://outlook.office365.com/ews/exchange.asmx</endpointUrl>
            <username></username>
            <password></password>
         </ews.config>
         <ews.sendItem>
            <saveItemToFolder>{$ctx:uri.var.saveItemToFolder}</saveItemToFolder>
            <itemId>{$ctx:uri.var.itemId}</itemId>
         </ews.sendItem>
         <respond/>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
      <faultSequence>
         <send/>
      </faultSequence>
   </target>
</proxy>
